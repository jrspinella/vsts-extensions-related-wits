{
    "manifestVersion": 1,
    "id": "related-workitems",
    "version": "1.0.6",
    "name": "Related Work items",
    "description": "Gets a list of related work items for your current work item.",
    "publisher": "mohitbagra",
    "icons": {
        "default": "img/logo.png"
    },
    "scopes": [ 
    	"vso.work"
	 ],
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "tags": [
        "Work Item",
        "Related",
        "Form",
        "Page"
    ],
    "content": {
        "details": {
            "path": "README.md"
        }
    },
    "repository": {
        "type": "git",
        "uri": "https://github.com/mohitbagra/vsts-extensions-related-wits"
    },  
    "branding": {
        "color": "#5C2D91",
        "theme": "dark"
    },
    "files": [
        {
            "path": "scripts",
            "addressable": true
        },
        {
            "path": "img",
            "addressable": true
        },
        {
            "path": "index.html",
            "addressable": true
        },
        {
            "path": "README.md",
            "addressable": true
        }
    ],
    "categories": [
        "Plan and track"
    ],
    "contributions": [
        {
            "id": "related-workitems-form-page",
            "type": "ms.vss-work-web.work-item-form-page",
            "description": "Related work items page",
            "targets": [
                "ms.vss-work-web.work-item-form"
            ],
            "properties": {
                "name": "Related Work items",
                "uri": "index.html"
            }
        }
    ]
}
